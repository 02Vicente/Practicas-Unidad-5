@model IEnumerable<Practica_V_III_Model.Models.Productos>

@{
    ViewBag.Title = "Index";
}

<h2>Listado Productos</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantExistente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Images/@item.ImageUrl" class="img-circle" alt="Kulu" width="100" height="70" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CantExistente)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ProductoId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ProductoId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ProductoId })
    </td>
</tr>
}

</table>
