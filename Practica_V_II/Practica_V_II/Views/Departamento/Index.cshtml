@model IEnumerable<Practica_V_II_Model.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Listado Departamentos</h2>

<p>
    <a class="btn btn-success" style="margin-bottom:5px" href="/Departamento/Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartamentoID })
        </td>
    </tr>
}

</table>
